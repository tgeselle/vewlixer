<?xml version="1.0"?>
<configuration>
    <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.0"/>
  </startup>
  <!--This will prevent your secondary threads exception from shutting down the application-->
  <!--<legacyUnhandledExceptionPolicy enabled="1"/>-->
  <runtime>
    <!--This section allows us to tell the app to search the lib folder for dlls apart from the actual app folder-->
    <assemblyBinding xmlns="urn:schemas-microsoft-com:asm.v1">
      <probing privatePath="lib" />
    </assemblyBinding>
  </runtime>
</configuration>
